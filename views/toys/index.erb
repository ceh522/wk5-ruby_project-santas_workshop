<h2>Toy Inventory</h2>

<%@toys.each do |toy| %>

<p><em> Name: </em><%=toy.name%></p>
<p><em> Description: </em><%=toy.description %></p>
<p><em>Stock quantity: </em><%=toy.stock_quantity %></p>
<p><em>Stock target: </em><%=toy.stock_target %></p>
<% if toy.stock_quantity.to_i == 0 %>
<p><em><strong>>OUT OF STOCK<</strong></em></p>
<% elsif toy.stock_quantity.to_i < toy.stock_target.to_i/2 %>
<p> <em><strong>>STOCK BELOW TARGET<</strong></em></p>
<%end%>
<p><em>Value (GoodWill Points): </em><%=toy.value %></p>
<p><em> Department id: </em><%=toy.department_id %></p>
<p><a href="/toys/<%=toy.id %>">Click to edit</a></p>
<hr>

<%end%>
