<h2>Toy Inventory</h2>

<%@toys.each do |toy| %>

<p> Name: <%=toy.name%></p>
<p> Description: <%=toy.description %></p>
<p> Stock quantity: <%=toy.stock_quantity %></p>
<p> Stock target: <%=toy.stock_target %></p>
<% if toy.stock_quantity.to_i == 0 %>
<p> >OUT OF STOCK< </p>
<% elsif toy.stock_quantity.to_i < toy.stock_target.to_i/2 %>
<p> >STOCK BELOW TARGET< </p>
<%end%>
<p> Value (GoodWill Points): <%=toy.value %></p>
<p> Department id: <%=toy.department_id %></p>
<p><a href="/toys/<%=toy.id %>">Click to edit</a></p>
<hr>

<%end%>
